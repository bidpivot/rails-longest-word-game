<h1>New Game</h1>

<p><%= @letters.join(" ") %></p>

<form action="score" method="score" data-turbo="false">
  
  <label for="input">type the longest word you can come up with</label><br>
  <input type="text" name="input">
  <input type="submit" value="submit word">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'grid', @letters  %>
</form>